<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :user_name, 'Your name' %><br />
  <%= f.text_field :user_name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :user_office, 'Your office' %><br />
  <%= f.select(:user_office, [['International', '1'], ['Netherlands', '2'], ['Germany', '3'], ['Mediterranean', '4'], ['United Kingdom', '5']], :prompt => 'Please select') %></div>

  <div><%= f.label :language, 'Preferred language' %><br />
  <%= f.select(:user_office, [['English', '1'], ['Spanish', '2'], ['French', '3']], :prompt => 'Please select') %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

