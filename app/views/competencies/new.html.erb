<%= form_for(@competency) do |f| %>
  <% if @competency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@competency.errors.count, "error") %> prohibited this competency from being saved:</h2>

      <ul>
      <% @competency.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label :competency_name, "Define competency (English)" %>
  <%= f.text_field :competency_name, :id => "competency_field" %>
</div>

<div class="field">
  <%= f.label :spanish, "Define competency (Spanish)" %>
  <%= f.text_field :spanish, :id => "competency_field" %>
</div>

<div class="field">
  <%= f.label :french, "Define competency (French)" %>
  <%= f.text_field :french, :id => "competency_field" %>
</div>

<div class="field">
  <%= f.label :competency_type, "Define type" %>
  <%= f.select(:competency_type, [['Technical', '1'], ['Method Related', '2'], ['Social/Self', '3'], ['Leadership', '4'], ['Organisational', '5']], :prompt => "Please choose", :id => "competency_type")  %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>

